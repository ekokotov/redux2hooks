{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./types",
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["esnext"],
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react",
    "resolveJsonModule": true,
    "rootDir": "./src",
    "skipLibCheck": true,
    "strict": true,
    "target": "esnext",
    "checkJs": false
  },
  "exclude": [
    "example-app",
    "dist"
  ],
  "include":[
    "src"
  ]
}

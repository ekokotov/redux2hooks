{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./types",
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["esnext"],
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "node",
    "jsx": "react",
    "resolveJsonModule": true,
    "rootDir": "./src",
    "skipLibCheck": true,
    "strict": true,
    "noEmitHelpers": true,
    "noImplicitAny": true,
    "strictNullChecks": true
  },
  "exclude": [
    "example-app",
    "dist"
  ],
  "include":[
    "src"
  ]
}
